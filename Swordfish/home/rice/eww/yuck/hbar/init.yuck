(include "./yuck/hbar/layout.yuck")

;; 14 is the amount of pixels between windows
(defwindow hbar
  :monitor 0
  :geometry (geometry
              :x "0%"
              :y "14px"
              :width "200px"
              :height "15px"
              :anchor "top center")

  :stacking "bg"
  :exclusive true
  (hbar_layout))
